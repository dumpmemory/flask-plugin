    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "reinstall",
            "command": [
                "pip uninstall flask_plugin -y", 
                "&&",
                "python3 setup.py install",
                "--install-lib /Users/doge/Library/Python/3.8/lib/python/site-packages"
            ]
        },
        {
            "type": "shell",
            "label": "document",
            "command": ["cd docs && ./build.sh"],
            "detail": "Build document for Flask-Plugin"
        },
        {
            "type": "shell",
            "label": "coverage",
            "command": ["coverage run --source src -m tests.run && coverage html -d reports"],
            "detail": "Check code coverage for Flask-Plugin"
        }
    ]
}