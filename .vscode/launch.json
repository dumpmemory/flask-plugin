{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Install Flask-Plugin",
            "type": "python",
            "request": "launch",
            "program": "setup.py",
            "console": "integratedTerminal",
            "args": [
                "install", 
                "--install-lib", 
                "/Users/doge/Library/Python/3.8/lib/python/site-packages"
            ],
            "preLaunchTask": "uninstall"
        },
        {
            "name": "Package Flask-Plugin",
            "type": "python",
            "request": "launch",
            "program": "setup.py",
            "console": "integratedTerminal",
            "args": [
                "clean",
                "--all",
                "bdist_wheel"
            ]
        },
        {
            "name": "Test and Coverage Flask-Plugin",
            "request": "launch",
            "type": "chrome",
            "file": "reports/index.html",
            "preLaunchTask": "coverage"
        },
        {
            "name": "Build document for Flask-Plugin",
            "request": "launch",
            "type": "chrome",
            "file": "docs/build/html/index.html",
            "preLaunchTask": "document"
        },
        {
            "name": "Develop Flask-Plugin",
            "type": "python",
            "request": "launch",
            "program": "example/app.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}